{
	"name": "taskratchet-web",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"preinstall": "npx only-allow pnpm",
		"checkTs": "tsc --noEmit",
		"format": "prettier --write .",
		"lint": "eslint --max-warnings 0 .",
		"lint:fix": "eslint --max-warnings 0 --fix .",
		"start": "vite",
		"build": "vite build",
		"preview": "vite preview",
		"test": "vitest --segfault-retry=3",
		"test:ui": "vitest --segfault-retry=3 --ui",
		"visualize": "pnpm run build && open ./stats.html",
		"unused": "pnpm dlx depcheck"
	},
	"bundlewatch": {
		"files": [
			{
				"path": "dist/**/*.*",
				"maxSize": "100kB"
			}
		],
		"normalizeFilenames": "^.+?(\\..+?)\\.\\w+$"
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"dependencies": {
		"@emotion/react": "^11.10.4",
		"@emotion/styled": "^11.10.4",
		"@highlight-run/react": "^1.2.1",
		"@mui/icons-material": "^5.10.9",
		"@mui/lab": "^5.0.0-alpha.104",
		"@mui/material": "^5.10.10",
		"@mui/x-date-pickers": "^5.0.5",
		"dayjs": "^1.11.6",
		"highlight.run": "4.4.1",
		"humanize-duration": "^3.27.3",
		"query-string": "^7.1.1",
		"react": "^18.2.0",
		"react-beforeunload": "^2.5.3",
		"react-dom": "^18.2.0",
		"react-ga4": "^1.4.1",
		"react-list": "^0.8.17",
		"react-query": "3.39.2",
		"react-router-dom": "^6.4.2",
		"react-toastify": "^5.5.0"
	},
	"devDependencies": {
		"@testing-library/jest-dom": "^5.16.5",
		"@testing-library/react": "^13.4.0",
		"@testing-library/user-event": "^14.4.3",
		"@types/humanize-duration": "^3.27.1",
		"@types/node": "^12.20.55",
		"@types/react": "^17.0.50",
		"@types/react-beforeunload": "^2.1.1",
		"@types/react-dom": "^18.0.6",
		"@types/react-list": "^0.8.7",
		"@types/react-router-dom": "^5.3.3",
		"@types/testing-library__jest-dom": "^5.14.5",
		"@typescript-eslint/eslint-plugin": "^5.40.1",
		"@typescript-eslint/parser": "^5.40.1",
		"@vitejs/plugin-react": "1.1.1",
		"@vitest/ui": "^0.24.3",
		"eslint": "^8.25.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-lodash": "^7.4.0",
		"eslint-plugin-react": "^7.31.10",
		"eslint-plugin-react-hooks": "^4.6.0",
		"eslint-plugin-regex": "^1.10.0",
		"eslint-plugin-testing-library": "^5.9.1",
		"jsdom": "^20.0.1",
		"prettier": "2.7.1",
		"rollup-plugin-visualizer": "^5.8.3",
		"sass": "^1.55.0",
		"type-fest": "^3.1.0",
		"typescript": "^4.8.4",
		"vite": "^3.1.8",
		"vitest": "^0.24.3",
		"vitest-fetch-mock": "^0.2.1"
	}
}
