{
	"name": "taskratchet-web",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"preinstall": "npx only-allow pnpm",
		"checkTs": "tsc --noEmit",
		"format": "prettier --write .",
		"lint": "eslint --max-warnings 0 .",
		"lint:fix": "eslint --max-warnings 0 --fix .",
		"start": "vite",
		"build": "vite build",
		"preview": "vite preview",
		"dev": "pnpm run start",
		"test": "vitest --segfault-retry=3",
		"test:ui": "vitest --segfault-retry=3 --ui",
		"visualize": "pnpm run build && open ./stats.html",
		"unused": "pnpm dlx depcheck"
	},
	"bundlewatch": {
		"files": [
			{
				"path": "dist/**/*.*",
				"maxSize": "100kB"
			}
		],
		"normalizeFilenames": "^.+?(\\..+?)\\.\\w+$"
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"dependencies": {
		"@emotion/react": "^11.10.5",
		"@emotion/styled": "^11.10.5",
		"@highlight-run/react": "^1.2.1",
		"@mui/icons-material": "^5.11.0",
		"@mui/lab": "^5.0.0-alpha.119",
		"@mui/material": "^5.11.8",
		"@mui/x-date-pickers": "^5.0.18",
		"@taskratchet/sdk": "^0.0.5",
		"dayjs": "^1.11.7",
		"firebase": "^9.17.1",
		"highlight.run": "6.0.0",
		"humanize-duration": "^3.28.0",
		"query-string": "^7.1.3",
		"react": "^18.2.0",
		"react-beforeunload": "^2.5.3",
		"react-dom": "^18.2.0",
		"react-list": "^0.8.17",
		"react-query": "3.39.2",
		"react-router-dom": "^6.8.1",
		"react-toastify": "^5.5.0"
	},
	"devDependencies": {
		"@testing-library/jest-dom": "^5.16.5",
		"@testing-library/react": "^13.4.0",
		"@testing-library/user-event": "^14.4.3",
		"@types/humanize-duration": "^3.27.1",
		"@types/node": "^18.13.0",
		"@types/react": "^18.0.28",
		"@types/react-beforeunload": "^2.1.1",
		"@types/react-dom": "^18.0.10",
		"@types/react-list": "^0.8.7",
		"@types/react-router-dom": "^5.3.3",
		"@types/testing-library__jest-dom": "^5.14.5",
		"@typescript-eslint/eslint-plugin": "^5.52.0",
		"@typescript-eslint/parser": "^5.52.0",
		"@vitejs/plugin-react": "3.1.0",
		"@vitest/ui": "^0.28.5",
		"eslint": "^8.34.0",
		"eslint-config-prettier": "^8.6.0",
		"eslint-plugin-lodash": "^7.4.0",
		"eslint-plugin-react": "^7.32.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"eslint-plugin-regex": "^1.10.0",
		"eslint-plugin-testing-library": "^5.10.1",
		"jsdom": "^21.1.0",
		"prettier": "3.3.3",
		"rollup-plugin-visualizer": "^5.9.0",
		"sass": "^1.58.0",
		"type-fest": "^3.5.7",
		"typescript": "^4.9.5",
		"vite": "^4.4.4",
		"vitest": "^0.33.0",
		"vitest-fetch-mock": "^0.2.1"
	}
}